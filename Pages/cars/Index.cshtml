<div class="accordion accordion-flush" id="accordionVehicle">

    <!--Hatchback accordion-->
    <div class="accordion-item">
        <h2 class="accordion-header" id="flush-Hatchbacks">
            <button class="btn btn-light"
                    type="button" data-toggle="collapse"
                    data-target="#flush-collapseOne"
                    aria-expanded="false"
                    aria-controls="flush-collapseOne">
                Hatchbacks
            </button>
        </h2>
        <div id="flush-collapseOne"
             class="accordion-collapse collapse"
             aria-labelledby="flush-Hatchbacks"
             data-parent="#accordionVehicle">
            <div class="accordion-body">
                <table class="table" id="HatchbackTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Vehicle[0].Name)
                            </th>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.Vehicle[0].Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vehicle[0].Count)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vehicle[0].Description)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Vehicle)
                        {
                            @if (item.Category == "Hatchbacks")
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Count)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                                    </td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


